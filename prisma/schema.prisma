generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Reminder {
    id           String   @id @default(uuid()) @map("_id")
    userId       String
    createdAt    DateTime @default(now())
    remindedTime DateTime
    reminder     String
    active       Boolean  @default(true)
}
